{
  "compilerOptions": {
    // ----- File Paths -----
    "rootDir": "./src",
    "outDir": "./dist",

    // ----- Language & Environment -----
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,

    // ----- Strict Type Checking -----
    "strict": true,
    "skipLibCheck": true,

    // ----- Build Options -----
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
